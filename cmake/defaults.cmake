IF(CONFIG_SERVER_PORT)
	SET(CONFIG_SERVER_PORT ${CONFIG_SERVER_PORT} CACHE STRING "" FORCE)
ELSE()
	SET(CONFIG_SERVER_PORT 11122)
ENDIF()

IF(CONFIG_LISTEN_BACKLOG)
	SET(CONFIG_LISTEN_BACKLOG ${CONFIG_LISTEN_BACKLOG} CACHE STRING "" FORCE)
ELSE()
	SET(CONFIG_LISTEN_BACKLOG 40)
ENDIF()

# It is somehow beneficial if this size is 32 bit aligned.
IF(CONFIG_MAX_MESSAGE_SIZE)
	SET(CONFIG_MAX_MESSAGE_SIZE ${CONFIG_MAX_MESSAGE_SIZE} CACHE STRING "" FORCE)
ELSE()
	SET(CONFIG_MAX_MESSAGE_SIZE 512)
ENDIF()

IF(CONFIG_MAX_WRITE_BUFFER_SIZE)
	SET(CONFIG_MAX_WRITE_BUFFER_SIZE ${CONFIG_MAX_WRITE_BUFFER_SIZE} CACHE STRING "" FORCE)
ELSE()
	SET(CONFIG_MAX_WRITE_BUFFER_SIZE 5120)
ENDIF()

# This parameter configures the maximum amount of states that can be
# handled in a jet. The number of states is 2^STATE_TABLE_ORDER.
IF(CONFIG_STATE_TABLE_ORDER)
	SET(CONFIG_STATE_TABLE_ORDER ${CONFIG_STATE_TABLE_ORDER} CACHE STRING "" FORCE)
ELSE()
	SET(CONFIG_STATE_TABLE_ORDER 13)
ENDIF()

# This parameter configures the maximum ongoing routed messages per
# peer.

IF(CONFIG_ROUTING_TABLE_ORDER)
	SET(CONFIG_ROUTING_TABLE_ORDER ${CONFIG_ROUTING_TABLE_ORDER} CACHE STRING "" FORCE)
ELSE()
	SET(CONFIG_ROUTING_TABLE_ORDER 6)
ENDIF()

IF(CONFIG_MAX_EPOLL_EVENTS)
	SET(CONFIG_MAX_EPOLL_EVENTS ${CONFIG_MAX_EPOLL_EVENTS} CACHE STRING "" FORCE)
ELSE()
	SET(CONFIG_MAX_EPOLL_EVENTS 10)
ENDIF()

IF(CONFIG_INITIAL_FETCH_TABLE_SIZE)
	SET(CONFIG_INITIAL_FETCH_TABLE_SIZE ${CONFIG_INITIAL_FETCH_TABLE_SIZE} CACHE STRING "" FORCE)
ELSE()
	SET(CONFIG_INITIAL_FETCH_TABLE_SIZE 4)
ENDIF()

IF(CONFIG_ROUTED_MESSAGES_TIMEOUT)
	SET(CONFIG_ROUTED_MESSAGES_TIMEOUT ${CONFIG_ROUTED_MESSAGES_TIMEOUT} CACHE STRING "" FORCE)
ELSE()
	SET(CONFIG_ROUTED_MESSAGES_TIMEOUT 5.0)
ENDIF()

